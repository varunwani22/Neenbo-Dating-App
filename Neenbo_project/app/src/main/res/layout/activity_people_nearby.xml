<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PeopleNearby">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:textStyle="bold"
            android:text="@string/peopleNearby"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:clickable="true"
            android:id="@+id/click_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/ic_setting" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/ic_addclip" />


                <ImageView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/johncircleimg" />

                <TextView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/tomcircleimg" />

                <TextView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/linacircleimg" />

                <TextView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/seencircleimg" />

                <TextView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/minacircleimg" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardView3">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="499dp"
            app:layout_constraintBottom_toTopOf="@id/cardView3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <ImageView

                        android:id="@+id/lisa1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:src="@drawable/lisa"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvlisa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lisa"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/lisa1"
                        app:layout_constraintTop_toBottomOf="@id/lisa1"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mumbai"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/tvlisa"
                        app:layout_constraintTop_toBottomOf="@id/tvlisa"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        />

                    <ImageView
                        android:id="@+id/julie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:src="@drawable/julie"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvjulie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/julie"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/julie"
                        app:layout_constraintTop_toBottomOf="@id/julie"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mumbai"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/tvjulie"
                        app:layout_constraintTop_toBottomOf="@id/tvjulie"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/selena"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:src="@drawable/selena"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvselena"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/selena"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/selena"
                        app:layout_constraintTop_toBottomOf="@id/selena"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mumbai"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/tvselena"
                        app:layout_constraintTop_toBottomOf="@id/tvselena"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        />

                    <ImageView
                        android:id="@+id/salman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:src="@drawable/salman"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvsalman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Salman"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/salman"
                        app:layout_constraintTop_toBottomOf="@id/salman"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mumbai"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/tvsalman"
                        app:layout_constraintTop_toBottomOf="@id/tvsalman"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/virat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:src="@drawable/viratk"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvVirat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/virat"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/virat"
                        app:layout_constraintTop_toBottomOf="@id/virat"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mumbai"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/tvVirat"
                        app:layout_constraintTop_toBottomOf="@id/tvVirat"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        />

                    <ImageView
                        android:id="@+id/mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:src="@drawable/mark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mark"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/mark"
                        app:layout_constraintTop_toBottomOf="@id/mark"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mumbai"
                        android:paddingStart="@dimen/dp_10"
                        app:layout_constraintStart_toStartOf="@id/tvMark"
                        app:layout_constraintTop_toBottomOf="@id/tvMark"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/black"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:clickable="true"
                android:id="@+id/click_peopleNearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/ic_locationorange" />

            <TextView
                android:clickable="true"
                android:id="@+id/click_encounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/ic_cardclip_plan" />

            <TextView
                android:clickable="true"
                android:id="@+id/click_likeyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/ic_heartclip" />

            <TextView
                android:id="@+id/click_messages"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/ic_message" />

            <TextView
                android:id="@+id/click_account"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/ic_personclip" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>